#!/bin/bash

BUILD_PATH=${SPIGOT_BUILD_PATH:-BuildTools}
BUILD_REV=${SPIGOT_BUILD_REV:-latest}
BUILD_OUTPUT_PATH=${SPIGOT_BUILD_OUTPUT_PATH:-Dist}
BUILD_OUTPUT_NAME=${SPIGOT_BUILD_OUTPUT_NAME:-craftbukkit}

echo -e "\e[0m\e[2mBuilding \e[22m$BUILD_OUTPUT_NAME \e[2mrev. \e[22m\e[32m$BUILD_REV\e[0m..."

cd $BUILD_PATH && java -jar BuildTools.jar --rev $BUILD_REV --compile craftbukkit && cd ..